/* pages/modification_infor/modification_infor.wxss */
.head{
  /* height: 200rpx; */
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background: linear-gradient(to right , #F1A23B, #F1843B);
  color: white;
}

.portrait{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 1px solid white;
  /* box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.4); */
  margin-right: 20rpx;
  overflow: hidden;
  position: relative;
  margin: 26rpx auto 20rpx auto;
}
.portrait>image{
  width: 100%;
  height: 100%;
  /* position: relative;
  z-index: 99; */
}
.mask{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.3);
  text-align: center;
}
.mask image{
  width: 46rpx;
  height: 46rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -23rpx 0 0 -23rpx;
}
.size24{
  font-size: 24rpx;
  color: #FBC277;
  margin-bottom: 33rpx;
}
form{
  width: 100%;
}
.input_item{
  height: 85rpx;
  width: 92%;
  padding: 0 4%;
  background: linear-gradient(to right , #F1A23B, #F1843B);
  display: flex;
  align-items: center;
  border-bottom: 1px solid #fbc087;
  color: #fef0e1;
}
.input_item image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 25rpx;
}
.input_con{
  display: flex;
  align-items: center;
  width: 230rpx;
}
.input_con text{
  font-size: 28rpx;
}
.input_item input{
  width: 350rpx;
  height: 85rpx;
  font-size: 28rpx;
  color: #fef0e1;
}
.getPhoneNumber{
  background-color: #F3B185;
  width: 120rpx;
  color: white;
  font-size: 20rpx;
  padding: 0 8rpx;
  line-height:50rpx;
}
.save{
  width: 500rpx;
  line-height: 60rpx;
  color: white;
  font-size: 30rpx;
  background-color: #F1843B;
  border-radius: 60rpx;
  border: none;
  margin-top: 54rpx;
}
.placeholder{
  color: #fef0e1;
  font-size: 28rpx;
}
button::after{ border: none; }
